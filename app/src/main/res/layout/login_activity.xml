<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_activity_bg">

    <RelativeLayout
        android:layout_width="157dp"
        android:layout_height="126dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp">
        <!--员工编号-->
        <!--登陆密码-->
        <LinearLayout
            android:id="@+id/password_layout"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/login_activity_tv"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="11dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:background="@drawable/password" />

            <EditText
                android:id="@+id/login_activity_password_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="9dp"
                android:background="@null"
                android:hint="@string/login_activity_password_tv"
                android:inputType="textPassword"
                android:maxLength="16"
                android:maxLines="1"
                android:textColor="@color/login_activity_username_pwd_tv"
                android:textSize="11sp"
                android:layout_marginEnd="9dp" />
        </LinearLayout>
        <!--确认-->
        <LinearLayout
            android:id="@+id/submit_layout"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_below="@id/password_layout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/login_activity_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_activity_btn"
                android:text="@string/login_activity_submit_btn"
                android:textColor="@color/login_activity_username_pwd_tv"
                android:textSize="11sp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
